generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_user {
  email    String  @id @db.VarChar(255)
  nickname String? @db.VarChar(255)
  password String? @db.VarChar(255)
}

model User {
  id       String    @id
  token    String    @unique
  sessions Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}
